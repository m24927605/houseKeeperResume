            <%=EHOTF_row2col6 %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="row">
      <span>Date日期:</span>
      <%=signDate %>
    </div>
    <div class="row">
      <div class="text-center">
        <button id="sendHtml" type="button" class="btn btn-success">Send Email</button>
      </div>
    </div>
  </div>
  <script>
    var allHtml = document.documentElement.innerHTML;
    var imgSrc= $("#personImage").attr("src");

    $("#sendHtml").click(function () {
      $.ajax({
        url: '/sendEmail',
        type: 'POST',
        data: {
          allHtml: allHtml,
          imgSrc:imgSrc
        },
        success: function (msg) {
          if(msg.status){
            alert('Success 成功');
          }
          else{
            alert('Fail 失敗');
          }
        },
        error: function (jqXHR, textStatus) {
          console.error('jqXHR:', jqXHR);
          console.error('textStatus:', textStatus);
        }
      });
    });

  </script>
